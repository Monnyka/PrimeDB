<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity"
    android:background="@drawable/main_background"
    >
    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_gradient_main"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <RelativeLayout
        android:id="@+id/rlSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:text="Welcome back,"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:text="Please input your login information to continue."
        android:textColor="#FFFFFF"
        android:layout_below="@+id/txtTitle"
        />
    <RelativeLayout
        android:id="@+id/rlLogInform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSubTitle"
        >
    <EditText
        android:id="@+id/edUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/proxima_nova_regular"
        android:hint="Username"
        android:singleLine="true"
        android:shadowColor="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorGray"
        android:textSize="@dimen/textNormal_two"
        android:inputType="textCapWords"
        android:gravity="left"
/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/proxima_nova_regular"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:shadowColor="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorGray"
        android:textSize="@dimen/textNormal_two"
        android:gravity="start"
        android:singleLine="true"
        android:layout_below="@+id/edUsername"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:textColor="@color/colorWhite"
        android:text="Sign In"
        android:textColorHint="@color/colorWhite"
        android:fontFamily="@font/proxima_nova_bold"
        android:background="@drawable/bg_stroke_transparent"
        android:layout_below="@+id/edPassword"
        android:layout_centerHorizontal="true"
         />

    </RelativeLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/idLogIn_spin_kit"
            style="@style/SpinKitView.Large.DoubleBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:SpinKit_Color="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtSubTitle"
            />
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>