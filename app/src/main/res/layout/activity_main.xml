<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/colorMainBackground"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/avenir_lst_td_black"
        android:text="@string/txt_title"
        android:textColor="#5C9947"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/txt_subtitle"
        android:textColor="@color/colorSubtext"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <HorizontalScrollView
        android:id="@+id/ll_movie_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_main"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lbInTheaterMovieTitle"
                    android:paddingEnd="100dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_lst_td_heavy"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lbInCinema"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbInTheaterMovieTitle"
                    android:paddingStart="8dp"
                    android:paddingLeft="15dp"
                    android:text="Avengers: Infinity War (2019)"
                    android:fontFamily="@font/avenir_lst_td_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="100dp"
                    android:textColor="#8E8E8E"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lbInTheaterMovieTitle"
                    android:paddingEnd="100dp"
                    android:textColor="#8E8E8E"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_lst_td_heavy"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lbSinceDate"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginStart="200dp"
                android:background="#000000"
                android:src="@drawable/avengers_end_game"
                />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginStart="315dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_main"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/lbCountDownMovieTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="100dp"
                    android:fontFamily="@font/avenir_lst_td_heavy"
                    android:text="@string/lbCountDown"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbCountDownMovieTitle"
                    android:paddingStart="8dp"
                    android:text="Avengers: End Game"
                    android:fontFamily="@font/avenir_lst_td_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="105dp"
                    android:textColor="#8E8E8E"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbCountDownText"
                    android:paddingStart="8dp"
                    android:text="3 DAYS"
                    android:fontFamily="@font/avenir_lst_td_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@id/lbCountDownMovieTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="105dp"
                    android:textColor="#8E8E8E"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginStart="515dp"
                android:src="@drawable/image_one"
                android:background="#000000"
                />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginStart="630dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_button_main"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="100dp"
                    android:fontFamily="@font/avenir_lst_td_heavy"
                    android:text="@string/lbMostPopular"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_above="@+id/lbMovieMostPopular"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbMovieMostPopular"
                    android:paddingStart="8dp"
                    android:text="Hellboy (2019)"
                    android:fontFamily="@font/avenir_lst_td_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="105dp"
                    android:textColor="#8E8E8E"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="Since April 22, 2019"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="105dp"
                    android:textColor="#8E8E8E"
                    android:layout_below="@+id/lbMovieMostPopular"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginStart="830dp"
                android:src="@drawable/image_one"
                android:background="#000000"
                />

        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/rl_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/lb_Coming_Up_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_movie_count">

        <RelativeLayout
            android:id="@+id/ll_Button_Dashboard"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_button_main">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_cast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_BrowsMovie"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="See the last update movie"
                android:layout_marginStart="25dp"
                android:layout_marginTop="29dp"
                android:textColor="#8E8E8E"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:fontFamily="@font/avenir_lst_td_black"
                android:textSize="26sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_Button_Brows"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_button_dashboard_mainscreen">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_airplay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_centerVertical="true"
                android:text="@string/lb_Dashboard"
                android:fontFamily="@font/avenir_lst_td_black"
                android:paddingBottom="15dp"
                android:textColor="@color/colorSubtext"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all movie report "
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:paddingTop="15dp"
                android:textColor="#ffffff"
                android:textSize="10sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_Button_Coming_Up"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_button_upcoming_mainscreen">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_aperture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_centerVertical="true"
                android:text="Avengers: End Game (2019)"
                android:fontFamily="@font/avenir_lst_td_black"
                android:paddingTop="15dp"
                android:textColor="@color/colorSubtext"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up coming movie "
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:paddingBottom="15dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:textSize="10sp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/lb_Coming_Up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="293dp"
        android:text="@string/lb_Coming_Up_title"
        android:textColor="@color/colorTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_button_group" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:scrollbars="none"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_Coming_Up_title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_one"/>
            
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:text="@string/lb_Movie_One"
                android:textColor="@color/colorSubtext"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginStart="140dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_two" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginStart="140dp"
                android:text="@string/lb_Movie_two"
                android:textColor="@color/colorSubtext"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginStart="280dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_three" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginStart="280dp"
                android:text="@string/lb_Movie_Three"
                android:textColor="@color/colorSubtext"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginStart="420dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_four"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="185dp"
                android:layout_marginStart="420dp"
                android:text="@string/lb_Movie_Four"
                android:textColor="@color/colorSubtext"
                />
        </RelativeLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>