<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSubtext"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#242A37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/rectangle"
            android:layout_width="143.92dp"
            android:layout_height="143.92dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-45dp"
            android:background="@drawable/bg_wallpaper_rectangle"
            android:alpha="0.3"
            android:rotation="-280"
            />
        <View
            android:layout_marginStart="247dp"
            android:layout_width="57dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_dot"
            >
        </View>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorWhite"
            android:src="@drawable/director"
            />
        <TextView
            android:id="@+id/lbProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:fontFamily="@font/circularstd_bold"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            />
        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/circularstd_bold"
            android:background="@drawable/bg_search_box"
            android:visibility="gone"
            />

        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/circularstd_bold"
        android:gravity="center_vertical"
        android:text="@string/Discover"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textVeryBig"
        />
        <Button
            android:id="@+id/btnUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_sub_button_rounded"
            android:layout_below="@+id/title"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/colorWhite"
            android:text="@string/upcoming"
        />

        <Button
            android:id="@+id/btnPopular"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="120dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_sub_button_rounded"
            android:layout_below="@+id/title"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/colorWhite"
            android:text="@string/Popular"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnSearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="365dp"
            android:src="@drawable/ic_search_white"
            android:layout_below="@+id/title"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUpcoming"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="35dp"
                android:id="@+id/rvTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/lbNewsFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:text="@string/News_Feed"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textMedium"
                    android:layout_below="@+id/rvTrending"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@id/lbNewsFeed"
                    android:background="@color/colorMainBackground"
                    app:cardCornerRadius="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:alpha="0.9"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_newsfeede" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingBottom="10dp"
                        android:text="John wick - Chapter 3 Parabelum is lead nuber 1st on the "
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textNormal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="start"
                        android:fontFamily="@font/circularstd_bold"
                        />

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="143.92dp"
                    android:layout_height="143.92dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-80dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="285dp"
                    android:background="@drawable/bg_wallpaper_rectangle"
                    android:alpha="0.3"
                    android:rotation="-150"
                    />


                <TextView
                    android:id="@+id/lbWatchlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:text="@string/Your_watchlist"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textMedium"
                    android:layout_below="@+id/cdFeed"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_Yourwatchlist"
                    android:layout_below="@id/lbWatchlist">
                </android.support.v7.widget.RecyclerView>

                <!--recap-->
                <TextView
                    android:id="@+id/lbRecap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:text="@string/Recap"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textMedium"
                    android:layout_below="@+id/rv_Yourwatchlist"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/cdRecap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/lbRecap"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="20dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/bg_recap"
                        android:scaleType="centerCrop"
                        />
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>