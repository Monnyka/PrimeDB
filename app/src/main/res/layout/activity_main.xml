<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_toolbar"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/avenir_lst_td_heavy"
        android:text="@string/txt_title"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/txt_subtitle"
        android:textColor="@color/colorSubtext"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="3000dp"
            android:paddingBottom="100dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title">

            <HorizontalScrollView
                android:id="@+id/ll_movie_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/lbInTheaterMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:paddingEnd="100dp"
                            android:text="@string/lbInCinema"
                            android:textColor="#8E8E8E"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbInTheaterMovieTitle"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingLeft="15dp"
                            android:paddingEnd="100dp"
                            android:text="Avengers: Infinity War"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbMovieInTheaterDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lbInTheaterMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbSinceDate"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imInTheater"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="200dp"
                        android:background="#000000"
                        android:src="@drawable/avengers_end_game" />

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="315dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/lbPopularLastYear"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbPopularLastYear"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbPopularLastYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Avengers: End Game"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbPopularLastYearRated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lbPopularLastYear"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="3 DAYS"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivPopularLastYear"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="515dp"
                        android:background="#000000"
                        android:src="@drawable/image_one" />

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="630dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/lbMovieMostPopular"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbMostPopular"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbMovieMostPopular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Hellboy (2019)"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbMovieMostPopularReleaseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbMovieMostPopular"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Since April 22, 2019"
                            android:textColor="#8E8E8E"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivMostPopular"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="830dp"
                        android:background="#000000"
                        android:src="@drawable/image_one" />

                </RelativeLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/rl_button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_movie_count"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                >

                <RelativeLayout
                    android:id="@+id/ll_Button_Dashboard"
                    android:layout_width="115dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_main"
                    >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/favorite"
                     android:layout_centerHorizontal="true"
                     android:fontFamily="@font/avenir_lst_td_black"
                     android:textColor="@color/colorMainBackground"
                     android:layout_marginTop="15dp"
                     android:textSize="16sp"
                     />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_favorite"
                    />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="115dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="147dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_main">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Calendar"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:textColor="@color/colorMainBackground"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_calendar"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="115dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="275dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_main">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Rank"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:textColor="@color/colorMainBackground"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_star"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_Button_Browse"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_main"
                    >

                    <ImageView
                        android:id="@+id/imBrowse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/filter_browse"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:text="@string/Browse"
                        android:textColor="#ffffff"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_Button_Coming_Up"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="102dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_main">

                    <!--<ImageView-->
                        <!--android:layout_width="60dp"-->
                        <!--android:layout_height="60dp"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_marginStart="300dp"-->
                        <!--android:layout_marginTop="25dp"-->
                        <!--android:src="@drawable/ic_aperture" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:paddingTop="15dp"
                        android:text="Avengers: End Game (2019)"
                        android:textColor="#8E8E8E"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/avenir_lst_td_heavy"
                        android:paddingBottom="30dp"
                        android:text="@string/Next_release"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/lb_Coming_Up_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_button_group"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:text="@string/lb_Coming_Up_title"
                android:textColor="@color/colorSubtext"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/lb_Coming_Up_title"
                    >

                    <ImageView
                        android:id="@+id/ivComing1"
                        android:layout_width="110dp"
                        android:layout_height="170dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_one" />

                    <TextView
                        android:id="@+id/lbUpComingMovieOne"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="175dp"
                        android:text="@string/lb_Movie_One"
                        android:textColor="@color/colorSubtext" />

                    <ImageView
                        android:id="@+id/ivUpComing2"
                        android:layout_width="110dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="130dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_two" />

                    <TextView
                        android:id="@+id/lbUpComingMovieTwo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="175dp"
                        android:text="@string/lb_Movie_two"
                        android:textColor="@color/colorSubtext" />

                    <ImageView
                        android:id="@+id/ivUpComing3"
                        android:layout_width="110dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="260dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_three" />

                    <TextView
                        android:id="@+id/lbUpComingMovieThree"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="175dp"
                        android:text="@string/lb_Movie_Three"
                        android:textColor="@color/colorSubtext" />
<!--
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="420dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_four" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="420dp"
                        android:layout_marginTop="185dp"
                        android:text="@string/lb_Movie_Four"
                        android:textColor="@color/colorSubtext" />-->
                </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>