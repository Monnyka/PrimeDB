<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/avenir_lst_td_heavy"
        android:text="@string/txt_title"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/txt_subtitle"
        android:textColor="@color/colorSubtext"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="3000dp"
            android:paddingBottom="100dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title">

            <HorizontalScrollView
                android:id="@+id/ll_movie_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/lbInTheaterMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:paddingEnd="100dp"
                            android:text="@string/lbInCinema"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbInTheaterMovieTitle"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingLeft="15dp"
                            android:paddingEnd="100dp"
                            android:text="Avengers: Infinity War"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbMovieInTheaterDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lbInTheaterMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbSinceDate"
                            android:textColor="#8E8E8E"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imInTheater"
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="200dp"
                        android:background="#000000"
                        android:src="@drawable/avengers_end_game" />

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="315dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/lbCountDownMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbCountDown"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbCountDownMovieTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Avengers: End Game"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbCountDownText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lbCountDownMovieTitle"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="3 DAYS"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="515dp"
                        android:background="#000000"
                        android:src="@drawable/image_one" />

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="630dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/bg_button_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/lbMovieMostPopular"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_heavy"
                            android:paddingEnd="100dp"
                            android:text="@string/lbMostPopular"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbMovieMostPopular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenir_lst_td_black"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Hellboy (2019)"
                            android:textColor="#8E8E8E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbMovieMostPopular"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="105dp"
                            android:text="Since April 22, 2019"
                            android:textColor="#8E8E8E"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="830dp"
                        android:background="#000000"
                        android:src="@drawable/image_one" />

                </RelativeLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/rl_button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_movie_count"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp">

                <RelativeLayout
                    android:id="@+id/ll_Button_Dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_button_main">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/lbCountdownButtonMovieTitle"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:text="@string/lbCountDown"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbCountdownButtonMovieTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingLeft="15dp"
                        android:text="Avengers: Infinity War"
                        android:textColor="#8E8E8E"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lbCountdownButtonMovieTitle"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/avenir_lst_td_heavy"
                        android:text="See the last update movie"
                        android:textColor="#8E8E8E"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:gravity="center"
                        android:paddingStart="290dp"
                        android:paddingLeft="15dp"
                        android:text="9"
                        android:textColor="#8E8E8E"
                        android:textSize="80sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_Button_Brows"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_button_main">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="280dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/ic_airplay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:paddingBottom="15dp"
                        android:text="@string/lb_Search"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/avenir_lst_td_heavy"
                        android:paddingTop="15dp"
                        android:text="View all movie report "
                        android:textColor="#8E8E8E"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_Button_Coming_Up"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_button_main">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="280dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/ic_aperture" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/avenir_lst_td_black"
                        android:paddingTop="15dp"
                        android:text="Avengers: End Game (2019)"
                        android:textColor="#8E8E8E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/avenir_lst_td_heavy"
                        android:paddingBottom="15dp"
                        android:text="Up coming movie "
                        android:textColor="#000000"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/lb_Coming_Up_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_button_group"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:text="@string/lb_Coming_Up_title"
                android:textColor="@color/colorSubtext"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/lb_Coming_Up_title"
                    >

                    <ImageView
                        android:id="@+id/ivComing1"
                        android:layout_width="110dp"
                        android:layout_height="170dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_one" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="185dp"
                        android:text="@string/lb_Movie_One"
                        android:textColor="@color/colorSubtext" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="120dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_two" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="185dp"
                        android:text="@string/lb_Movie_two"
                        android:textColor="@color/colorSubtext" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="250dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_three" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="280dp"
                        android:layout_marginTop="185dp"
                        android:text="@string/lb_Movie_Three"
                        android:textColor="@color/colorSubtext" />
<!--
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="420dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/bg_imageview_main"
                        android:padding="2.65dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_four" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="420dp"
                        android:layout_marginTop="185dp"
                        android:text="@string/lb_Movie_Four"
                        android:textColor="@color/colorSubtext" />-->
                </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>