<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSubtext"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#242A37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorWhite"
            android:src="@drawable/director"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/lbProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/circularstd_bold"
            android:text="Log In"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/circularstd_bold"
            android:background="@drawable/bg_search_box"
            android:visibility="gone"
            />

        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:gravity="center_vertical"
        android:text="@string/Discover"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textVeryBig"
        />
        <Button
            android:id="@+id/btnUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_sub_button_rounded"
            android:layout_below="@+id/title"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/colorWhite"
            android:text="@string/upcoming"
            android:visibility="gone"
        />

        <Button
            android:id="@+id/btnPopular"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="120dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_sub_button_rounded"
            android:layout_below="@+id/title"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/colorWhite"
            android:text="@string/Popular"
            android:visibility="gone"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="365dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_search_white"
            android:layout_toLeftOf="@id/imProfile"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUpcoming"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/lbTrending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="@string/Trending_Movie"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rvTrending"
                android:layout_marginEnd="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbTrending"
                >
            </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/lbUpcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="29dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="@string/Upcoming_Movie"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_below="@+id/rvTrending"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcUpComing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lbUpcoming"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/lbWatchlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="29dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="@string/Your_watchlist"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_below="@+id/rcUpComing"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_Yourwatchlist"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="left"
                    android:layout_below="@id/lbWatchlist">
                </android.support.v7.widget.RecyclerView>

                <!--recap-->
                <TextView
                    android:id="@+id/lbRecap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text="@string/Recap"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textMedium"
                    android:layout_below="@+id/rv_Yourwatchlist"
                    />
                <android.support.v7.widget.CardView
                    android:id="@+id/cdRecap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/lbRecap"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="20dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/bg_recap"
                        android:scaleType="centerCrop"
                        />
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>