<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity"
    android:background="@color/colorMainBackground">

    <ScrollView
        android:id="@+id/svMovieDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbars"
        android:layout_marginTop="20dp"
        android:background="@color/colorBackgroundSecond"
        >
    <RelativeLayout
        android:id="@+id/rlMovieDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_marginTop="58dp"
            android:layout_height="220dp"
            android:background="@color/colorWhite"
            android:autoStart="true"
          />
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/view_pager"
            android:background="@drawable/bg_gradiant_alpha"
            />



        <TextView
            android:id="@+id/lbMovieTitle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:paddingTop="235dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:gravity="center"
            android:text="@string/lb_MovieTitle"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/lbTagLine"
            android:layout_centerHorizontal="true"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/dot"
            android:textColor="#b0bec5"
            android:fontFamily="@font/avenirltstd_roman"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lbMovieTitle"
            />

    <TextView
        android:id="@+id/lbGenre"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:fontFamily="@font/avenir_lst_td_heavy"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lbTagLine"
        />


        <RelativeLayout
            android:id="@+id/RlSubDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lbGenre">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="115dp"
                android:layout_height="170dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="75dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:transitionName="imageViewPoster"
                />
            <ImageView
                android:id="@+id/ivWatchLater"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="80dp"
                android:src="@drawable/ic_bookmark"
                android:layout_alignTop="@id/ivPoster"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_release_date"
                android:layout_marginStart="220dp"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:id="@+id/lbYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="14sp"
                android:paddingStart="250dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_budget"
                android:layout_marginStart="220dp"
                android:layout_marginTop="65dp"
                />

            <TextView
                android:id="@+id/lbBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingStart="250dp"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock"
                android:layout_marginStart="220dp"
                android:layout_marginTop="95dp"
                />
            <TextView
            android:id="@+id/lbRunTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginStart="250dp"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_language"
                android:layout_marginStart="220dp"
                android:layout_marginTop="125dp"
                />

            <TextView
                android:id="@+id/lbLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingStart="250dp"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_rated"
                android:layout_marginStart="220dp"
                android:layout_marginTop="155dp"
                />

            <TextView
                android:id="@+id/lbRatedR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingStart="250dp"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_revenue"
                android:layout_marginStart="220dp"
                android:layout_marginTop="185dp"
                />

            <TextView
                android:id="@+id/lbRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingStart="250dp"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/Rl_rating_recap"
            android:layout_below="@+id/RlSubDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_clickable">

                        <TextView
                            android:id="@+id/lbRated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/lb_SubRate"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="@string/Overall_Rating"
                            android:fontFamily="@font/circularstd_bold"
                            android:textSize="12sp"
                            android:layout_below="@+id/lbRated"
                            android:textColor="@color/colorSubtext"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="@color/colorGray"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/rl_PersonalRate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                      android:background="@drawable/bg_clickable"
                    >
                    <TextView
                        android:id="@+id/lbYourRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/circularstd_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorSubtext"
                        android:background="@drawable/bg_clickable"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="2.5dp"
                        android:src="@drawable/ic_star"
                        android:layout_toEndOf="@id/lbYourRating"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/Personal_Rating"
                        android:fontFamily="@font/circularstd_bold"
                        android:textSize="12sp"
                        android:layout_below="@+id/lbYourRating"
                        android:textColor="@color/colorSubtext"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/colorGray"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_Favorite"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_clickable"
                    >

                    <ImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_heart"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorSubtext"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/favorite"
                        android:fontFamily="@font/circularstd_bold"
                        android:textSize="12sp"
                        android:layout_below="@+id/ivFavorite"
                        android:textColor="@color/colorSubtext"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/colorGray"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/lbVoteCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/lb_SubBudget"
                        android:fontFamily="@font/avenir_lst_td_heavy"
                        android:textSize="14sp"
                        android:textColor="@color/colorSubtext"
                        />
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/lbDistributeCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/lbSynopsisDetail"
            android:text="@string/Distribute_Company"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/lbDistributeDetail"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbDistributeCompany"
            android:textSize="14sp"
            android:textColor="@color/colorGray"
            android:fontFamily="@font/avenirltstd_roman"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:id="@+id/lbSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Rl_rating_recap"
            android:text="@string/lb_synopsis"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/circularstd_bold"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/lbSynopsisDetail"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbSynopsis"
            android:text="@string/lb_synopsisDetail"
            android:textSize="14sp"
            android:textColor="@color/colorGray"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />


        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabIndicatorHeight="2dp"
            app:tabBackground="@color/colorBackgroundSecond"
            app:tabMode="fixed"
            app:tabTextColor="@color/colorWhite"
            android:layout_below="@+id/lbDistributeDetail"
            >
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerDetail"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@id/tabLayout">
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
    </ScrollView>

    <include layout="@layout/toolbar"
        android:id="@+id/toolbars"
        />
    <!--BottomSheet-->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorWhite"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/lbSelectList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/Select_list"
                android:fontFamily="@font/circularstd_bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_userList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbSelectList"
                >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>





</android.support.design.widget.CoordinatorLayout>
