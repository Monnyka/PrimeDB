<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_moviedetail"
    android:background="@color/colorMainBackground">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <VideoView
        android:id="@+id/VvTrailer"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbMovieTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/VvTrailer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:gravity="center"
            android:text="@string/lb_MovieTitle"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lbTagLine"
            android:layout_centerHorizontal="true"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/lbTagLine"
            android:textColor="#b0bec5"
            android:fontFamily="@font/avenirltstd_roman"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lbMovieTitle"
            />

    <TextView
        android:id="@+id/lbGenre"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:fontFamily="@font/avenir_lst_td_heavy"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_below="@id/lbMovieTitle"
        />


        <RelativeLayout
            android:id="@+id/RlSubDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lbGenre">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="110dp"
                android:layout_height="170dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="85dp"
                android:background="@drawable/bg_imageview_main"
                android:padding="2.65dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_one"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_release_date"
                android:layout_marginStart="230dp"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:id="@+id/lbYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_a"
                android:textColor="#ffffff"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:textSize="14sp"
                android:paddingStart="260dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_budget"
                android:layout_marginStart="230dp"
                android:layout_marginTop="65dp"
                />

            <TextView
                android:id="@+id/lbBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:paddingStart="260dp"
                android:text="@string/n_a"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock"
                android:layout_marginStart="230dp"
                android:layout_marginTop="95dp"
                />
            <TextView
            android:id="@+id/lbRunTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:layout_marginStart="260dp"
                android:text="@string/n_a"
            android:textColor="#ffffff"
            android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_language"
                android:layout_marginStart="230dp"
                android:layout_marginTop="125dp"
                />

            <TextView
                android:id="@+id/lbLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:paddingStart="260dp"
                android:text="@string/n_a"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_rated"
                android:layout_marginStart="230dp"
                android:layout_marginTop="155dp"
                />


            <TextView
                android:id="@+id/lbRatedR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:paddingStart="260dp"
                android:text="@string/n_a"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_revenue"
                android:layout_marginStart="230dp"
                android:layout_marginTop="185dp"
                />

            <TextView
                android:id="@+id/lbRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:fontFamily="@font/avenir_lst_td_heavy"
                android:paddingStart="260dp"
                android:text="@string/n_a"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/separateLine1"
            android:layout_width="1dp"
            android:layout_marginTop="25dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSubtext"
            android:layout_below="@+id/RlSubDetail"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/RlSubDetail"
            android:layout_marginStart="93dp"
            android:layout_marginTop="30dp"
            android:layout_alignStart="@id/separateLine1"

            android:src="@drawable/ic_thumbs_up"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_below="@id/RlSubDetail"
            android:layout_marginStart="290dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_heart"/>
        <TextView
            android:id="@+id/lbRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_SubRate"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:textSize="20sp"
            android:textColor="@color/colorSubtext"
            android:layout_below="@id/RlSubDetail"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/lbVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_SubBudget"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:textSize="20sp"
            android:textColor="@color/colorSubtext"
            android:layout_below="@id/RlSubDetail"
            android:paddingStart="195dp"
            android:layout_marginTop="60dp"

            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/lbDistributeCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/lbSynopsisDetail"
            android:text="@string/Distribute_Company"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/lbDistributeDetail"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbDistributeCompany"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenirltstd_roman"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:id="@+id/lbSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/separateLine1"
            android:text="@string/lb_synopsis"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/lbSynopsisDetail"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbSynopsis"
            android:text="@string/lb_synopsisDetail"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenirltstd_roman"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
        <TextView
            android:id="@+id/lbDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lbDistributeDetail"
            android:text="@string/lb_Director"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:layout_marginStart="30dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@id/lbDirector"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:id="@+id/ivDirector"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@color/colorSubtext"
            app:civ_border_width="1dp"
            android:src="@drawable/director"
            />
        <TextView
            android:id="@+id/lbDirectorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:text="@string/lb_DirectorName"
            android:layout_below="@id/lbDirector"
            />

        <TextView
            android:id="@+id/lbCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivDirector"
            android:layout_marginTop="25dp"
            android:text="@string/lb_cast"
            android:textSize="14sp"
            android:textColor="@color/colorSubtext"
            android:fontFamily="@font/avenir_lst_td_heavy"
            android:layout_marginStart="30dp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/recycler_view_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbCast"
            android:background="@color/colorMainBackground"
            />





