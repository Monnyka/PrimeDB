<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleDetail"
    android:background="@color/colorMainBackground"
    >

    <RelativeLayout
        android:id="@+id/rlPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        />
        <RelativeLayout
            android:id="@+id/rcDetail"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/lbPeopleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Christ Hemsworth"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proxima_nova_bold"
            />

        <TextView
            android:id="@+id/lbSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="Male"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_below="@+id/lbPeopleName"
            />

        <TextView
            android:id="@+id/lbJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="Actor"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_below="@+id/lbSex"
            />

        <TextView
            android:id="@+id/lbDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="OCTOBER 21, 2019"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/lbJob"
            />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iV_Profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1dp"
                android:layout_centerVertical="true"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                android:src="@drawable/ic_heart"
                android:layout_alignEnd="@id/iV_Profile"
                android:layout_alignBottom="@id/iV_Profile"
                app:civ_circle_background_color="@color/LabelGray"

                />

            </RelativeLayout>


        <TextView
            android:id="@+id/lbBiology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="After the murder of his father, a young lion prince flees his kingdom only to learn the true meaning of responsibility and bravery. "
            android:textSize="14sp"
            android:textColor="@color/LabelGray"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_below="@+id/rcDetail"
            />

        <TextView
            android:id="@+id/lbFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_below="@+id/lbBiology"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPeopleFilm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbFilm"/>






    </RelativeLayout>
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />
</android.support.constraint.ConstraintLayout>