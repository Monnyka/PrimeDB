<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="@color/colorMainBackground">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_toolbar"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnBackSearch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_clickable"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <!--<TextView-->

            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Movie Detail"-->
            <!--android:paddingTop="41dp"-->
            <!--android:textSize="18sp"-->
            <!--android:fontFamily="@font/avenir_lst_td_heavy"-->
            <!--android:textColor="#ffffff"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titlePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
    <TextView
        android:id="@+id/ScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_movie"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/avenir_lst_td_black"
        />

        <TextView
            android:layout_below="@id/ScreenTitle"
            android:id="@+id/ScreenSearchSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_now"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorSubtext"

            />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/llSearch"
            android:layout_below="@id/ScreenSearchSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@android:color/background_light"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/avenir_lst_td_black"
                android:hint="@string/search_hint"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="40sp"
                android:textColor="@color/colorSubtext"
                android:textColorHint="#BDBDBD"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="0dp"
        android:paddingBottom="100dp"
        android:id="@+id/recyclerMovieList"
        app:layout_constraintTop_toBottomOf="@id/titlePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>