<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_clickable"
        >

        <ImageView
            android:id="@+id/ivMovieItem"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:padding="2.65dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_one"
            />

        <TextView
            android:id="@+id/txt_MovieTitle"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_movie_title"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txt_Rate"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:text="8.0"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_below="@id/txt_MovieTitle"
            android:fontFamily="@font/avenirltstd_roman"
            />
        <TextView
            android:id="@+id/txt_releaseDate"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:text="aaa"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_below="@id/txt_Rate"
            android:fontFamily="@font/avenirltstd_roman"
            />

        <ImageView
            android:layout_width="365dp"
            android:layout_height="0.3dp"
            android:background="@color/colorGray"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>