<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/itemParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cv_imageView"
            app:cardElevation="18dp"
            android:layout_width="130dp"
            android:layout_height="235dp"
            android:elevation="24dp"
            app:cardCornerRadius="8dp"
            android:background="@drawable/back_trending_item"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#393E49"/>
            <ImageView
                android:id="@+id/imTrendingPoster"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:src="@drawable/image_two"
                android:scaleType="centerCrop"
                />


            <TextView
                android:id="@+id/lbTrendingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Wick - Chapter 3 Parabellum"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="15sp"
                android:textColor="#45B950"
                android:textStyle="bold"
                android:layout_marginTop="195dp"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/lbTrendingReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action/ Crime"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="12sp"
                android:textColor="#848484"
                android:textStyle="bold"
                android:layout_marginTop="220dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/lbGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbTrendingTitle"
                android:text="Action/ Crime"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="12sp"
                android:textColor="#969696"
                android:layout_marginTop="215dp"
                android:layout_marginStart="4dp"
                />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>