<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="9dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/ivUpcomingBanner"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:scaleType="centerCrop"
                />

        <ImageView
            android:id="@+id/bg_gradient"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@drawable/bg_gradiant_alpha"
            android:scaleType="centerCrop"

            />
        <TextView
            android:id="@+id/lbUpcomingMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/upcoming"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_above="@+id/lbReleaseDate"

            />
        <TextView
            android:id="@+id/lbReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming"
            android:textColor="#969696"
            android:textSize="@dimen/textSmall"
            android:textAllCaps="true"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginStart="10dp"
            android:layout_above="@+id/lbReview"
            />
            <TextView
                android:id="@+id/lbReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/upcoming"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSmall"
                android:fontFamily="@font/proxima_nova_regular"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/bg_gradient"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>