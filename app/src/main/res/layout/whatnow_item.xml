<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/itemParent"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cv_imageView"
            app:cardElevation="18dp"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="24dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/imTrendingPoster"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:src="@drawable/image_two"
                android:scaleType="centerCrop"

                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/lbTrendingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_imageView"
            android:text="John Wick - Chapter 3 Parabellum"
            android:fontFamily="@font/circularstd_bold"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/lbTrendingReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:text="Action/ Crime"
            android:fontFamily="@font/avenirltstd_roman"
            android:textSize="16sp"
            android:textColor="#848484"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>