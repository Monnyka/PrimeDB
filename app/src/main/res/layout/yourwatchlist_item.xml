<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:background="@color/colorMainBackground"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@color/colorMainBackground"

            >

        <ImageView
            android:id="@+id/iv_YourWatchList_Poster"
            android:layout_width="160dp"
            android:layout_height="235dp"
            android:src="@drawable/image_one"

            />
        <TextView
            android:id="@+id/lbWatchListTitle"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Avengers - End Game"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/circularstd_bold"
            android:layout_below="@id/iv_YourWatchList_Poster"
            />

        <TextView
            android:id="@+id/lbWatchListYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019"
            android:fontFamily="@font/circularstd_bold"
            android:layout_below="@id/lbWatchListTitle"
            android:textColor="@color/colorWhite"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>