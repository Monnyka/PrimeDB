<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:background="@color/colorMainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_YourWatchList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/colorMainBackground"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/iv_YourWatchList_Poster"
            android:layout_width="120dp"
            android:layout_height="185dp"
            android:src="@drawable/image_one"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/lbWatchListTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:text="Avengers - End Game"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/proxima_nova_bold"
        android:layout_below="@+id/cd_YourWatchList"
        />

    <TextView
        android:id="@+id/lbWatchListYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="2019"
        android:fontFamily="@font/proxima_nova_regular"
        android:layout_below="@id/lbWatchListTitle"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="@color/colorMainBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


    </RelativeLayout>

</RelativeLayout>